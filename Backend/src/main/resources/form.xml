                </question>
                <!---->
                <question qid="4" type="textbox"> <!--textbox-->
                    <text></text> <!--text otazky-->
                </question>
                <!---->
                <question qid="5" type="date"> <!--date-->
                    <text></text> <!--text otazky-->
